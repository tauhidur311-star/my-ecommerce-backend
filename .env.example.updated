# Database
MONGODB_URI=mongodb://localhost:27017/ecommerce

# JWT
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-key-here
JWT_EXPIRE=2h
JWT_REFRESH_EXPIRE=30d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id

# Mailjet REST API Configuration (UPDATED - NO MORE SMTP)
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key
FROM_EMAIL=security@yourdomain.com
FROM_NAME=E-commerce Security System
APP_NAME=StyleShop

# Security Alerts
ALERT_EMAIL=admin@yourdomain.com

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Payment Gateway
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
BKASH_APP_KEY=
BKASH_APP_SECRET=

# File Upload
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Redis (for caching - optional, will fallback to memory cache)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# Logging
LOG_LEVEL=info

# Database Pool Settings (optional)
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_MAX_IDLE_TIME=30000

# Slack Alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Sentry Error Tracking (optional)
SENTRY_DSN=your_sentry_dsn_here