{
  "name": "backend-optimization-dependencies",
  "description": "Additional dependencies needed for comprehensive optimization",
  "dependencies": {
    "winston": "^3.18.3",
    "redis": "^5.9.0",
    "compression": "^1.7.4",
    "@sentry/node": "^7.118.0",
    "@sentry/tracing": "^7.118.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "nodemailer": "^7.0.10",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-node": "^4.1.0",
    "prettier": "^3.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "@types/node": "^20.16.10",
    "typescript": "^5.6.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1"
  },
  "scripts": {
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "nodemon server-optimized.js",
    "start:optimized": "node server-optimized.js",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": ["node"],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}